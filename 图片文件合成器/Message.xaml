<Window x:Class="图片文件合成器.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Message" Height="205" Width="270" BorderThickness="24" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize">
    <Window.Effect>
        <DropShadowEffect BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>
    <Grid>
        <Canvas MouseLeftButtonDown="Canvas_MouseLeftButtonDown" Background="Transparent">
            <Label Content="消息" Canvas.Left="90" Canvas.Top="10" Foreground="#FF7A7777" FontSize="14"/>
            <Rectangle Fill="#aaa" VerticalAlignment="Top" Height="2" Width="222" Canvas.Top="38"/>
            <Image Height="72" Canvas.Left="74" Canvas.Top="65" Width="72" Cursor="Hand" Source="img/ok.png" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
        </Canvas>
    </Grid>
</Window>
