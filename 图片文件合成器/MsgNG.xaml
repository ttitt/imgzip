<Window x:Class="图片文件合成器.MsgNG"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="MsgNG" Height="257" Width="332" BorderThickness="24" WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize">
    <Window.Effect>
        <DropShadowEffect BlurRadius="24" Color="#FF858484" Direction="90" ShadowDepth="3"/>
    </Window.Effect>
    <Grid>
        <Canvas MouseLeftButtonDown="Canvas_MouseLeftButtonDown" Background="Transparent">
            <Label Content="失败" Canvas.Left="124" Canvas.Top="10" Foreground="#FF7A7777" FontSize="14"/>
            <Rectangle Fill="#aaa" VerticalAlignment="Top" Height="2" Width="284" Canvas.Top="38"/>
            <Image Height="72" Canvas.Left="108" Canvas.Top="116" Width="72" Source="img/ng.png" Cursor="Hand" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
            <Label Content="图片过大，超过2M的图片无法进行合成" Canvas.Left="14" Canvas.Top="69" FontSize="14"/>
        </Canvas>
    </Grid>
</Window>
